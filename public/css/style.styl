
rosa = #EB0F3E
rosa_dark = #AB0B2D
azul = #049DBF
azul_dark = #03658C
azul_light = #00A3E8

body
	background url(../images/desk.jpg) no-repeat center center fixed
	background-size cover 
	font-family 'Roboto', sans-serif
	position relative	

header
	overflow hidden
	position relative
	
	
	&:focus
		border-bottom 2px solid azul_light
	
.button-center
	display block
	margin 0 auto
	width 30%
	
.body
	min-height 100vh
	
.borde 
	border 2px solid red
	
.btn-registrate
.btn-login
	background transparent
	border 4px solid white
	box-shadow rgba(0,0,0,0.5) 0px 0px 5px
	color white
	float right
	font-size 1em
	margin 1em
	padding 1em
	text-decoration none
	
	
.email-error
.username-error
	color red

.background-error
	background rgba(0,0,0,0.5)
	height 100%
	left 0
	position fixed
	top 0
	width 100%
	
	.error
		background #FFF
		border-bottom-left-radius 10px
		border-bottom-right-radius 10px
		color gray
		font-size 16px
		padding 0em 1em 4em 1em
		position absolute
		top 30%
		left 33%
		text-align center
		width 30%
		
.form-container
	position absolute
	top 30%
	width 100%
	.login
		background white
		border-radius 10px
		margin 0 auto
		width 50%
	.oauth
		overflow hidden
		a 
			font-weight bold
			text-decoration none
			
		
	.registro
		background white
		border-radius 10px
		margin 0 auto
		padding 0 .5em
		position relative
		top -10em
		width 50%
		form 
		
			position relative
	
.login
	position relative
		
		&:active
			margin-top 1em
			border-bottom 0
			
	.password-icon
		color gray
		position absolute
		right 60px
		top 120px
	.user-icon
		color gray
		position absolute
		right 60px
		top 50px
			
.pre-loader
	background url(../images/loader-64x/Preloader_3.gif) center no-repeat #FFF		
	height 100%
	left 0px
	position fixed
	top 0px
	width 100%
	z-index 9999

.ocultar
	display none	

.bounce
	position relative
	font-weight bold
	-webkit-animation bounce 1s ease-out
	-moz-animation bounce 1s ease-out	
	animation bounce 1s ease-out
	
	@keyframes bounce
		0%
			transform translateY(-400%)
			opacity 0
		5%
			transform translateY(-300%)
			opacity 0
		15%
			transform translateY(-200%)
			
		30%
			transform translateY(-100%)
		40%
			transform translateY(-50%)
			
		50%
			transform translateY(-30%)
		70%
			transform translateY(-10%)
			
		80%
			transform translateY(0%)
		90%
			transform translateY(-10%)
			
		100%
			transform translateY(0%)
			opacity 1
			
@media screen and (min-width 1280px)
	.form-container
		position absolute
		top 30%
		width 100%
		.login
			background white
			border-radius 10px
			margin 0 auto
			width 50%



@media screen and (max-width 768px)
		.form-container
			
			.login
			.registro
				width 80%
		footer
			.contactanos
				font-size 14px
				
			.siguenos 
				float left
				font-size 14px
				margin-bottom 1em
				
				

@media screen and (max-width 480px)
	.form-container
		.login
		.registro
			width 100%
		
		.registro
			top -5em
			input
				margin 0
				padding 0
			
			
	footer
		.contactanos
			font-size 12px
			
		.siguenos 
			float left
			font-size 12px
			margin-bottom 1em
			